@model IEnumerable<ExercicioCrud.Models.Seller>
<br />
@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>
<br />
<p>
    <a asp-action="Create" class="btn btn-secondary">Novo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="btn-primary">
            <th>
                @Html.DisplayNameFor(Model => Model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.SalarioBase)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td> 

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SalarioBase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a> 

            </td>
        </tr>
            }
    </tbody>

</table>

